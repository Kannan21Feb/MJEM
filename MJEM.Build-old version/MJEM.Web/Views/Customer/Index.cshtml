
@{
    ViewBag.Title = "Customer-List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<title>Customer-List</title>
<script src="~/Scripts/ng/Controller/CustomerMst/CustomerDetailsController.js"></script>
<script src="~/Scripts/ng/Services/CustomerService/CustomerService.js"></script>
<link href="~/css/MJEMPage.css" rel="stylesheet" />


<div class="row" ng-controller="Customer.CustomerListController" ng-init="init()" ng-cloak>
 
    
    <hr />
            <div class="col-sm-12">
                <div class="text-right">
                    <button type="submit" id="save" class="btn btn-warning" onclick="window.location.href='/Customer/Add'">Add New Customer (+)</button>
                </div>
                <br />
                <div >
                    <table class="table table-responsive ">
                        
                        <thead class="tableHeading ">
                            <tr>

                                <th width="15%">Customer </th>
                                <th width="15%">MobileNumber</th>
                                <th width="25%">Address</th>
                                <th width="5%">Edit</th>
                                <th width="5%">Delete</th>

                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="Cst in CustomerList track by $index">
                                <td style="display:none" ng-model="Cst.CustomerId"></td>
                                <td>{{Cst.CustomerName}}</td>
                                <td>{{Cst.MobileNumber}}</td>
                                <td>{{Cst.CustomerAddress}}</td>
                                <td  ng-click="CustomerEdit(Cst.CustomerId)"><i class="glyphicon glyphicon-pencil PencilClr"></i></td>
                                <td  ng-click="CustomerDelete(Cst.CustomerId)"><i class="glyphicon glyphicon-trash TrashBinClr" ></i></td>

                            </tr>
                        </tbody>
                    </table>

                </div>

                


            </div>
      
   
</div>