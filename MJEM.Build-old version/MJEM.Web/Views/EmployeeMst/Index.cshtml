
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script src="~/Scripts/ng/Controller/EmployeeMst/EmployeeDetailsController.js"></script>
<script src="~/Scripts/ng/Services/EmployeeMst/EmployeeService.js"></script>


<div class="row" ng-controller="Emplyoee.EmplyoeeListController" ng-init="init()" ng-cloak>


    <hr />
    <div class="col-sm-12">
        <div class="text-right">
            <button type="submit" id="save" class="btn btn-warning" onclick="window.location.href='/EmployeeMst/Add'">Add New Employee (+)</button>
        </div>
        <br />
        <div>
            <table class="table table-responsive ">

                <thead class="tableHeading ">
                    <tr>

                        <th width="15%">Employee</th>
                        <th width="15%">MobileNumber</th>
                        <th width="25%">Id Proof</th>
                        <th width="25%">Address</th>
                        <th width="5%">Edit</th>
                        <th width="5%">Delete</th>

                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="Emp in EmployeeList track by $index">
                        <td style="display:none" ng-model="Cst.EmployeeId"></td>
                        <td>{{Emp.EmplyoeeName}}</td>
                        <td>{{Emp.MobileNumber}}</td>
                        <td>{{Emp.GovtId}}</td>
                        <td>{{Emp.Address}}</td>
                        <td ng-click="EmplyoeeEdit(Emp.EmplyoeeId)"><i class="glyphicon glyphicon-pencil PencilClr"></i></td>
                        <td ng-click="EmplyoeeDelete(Emp.EmplyoeeId)"><i class="glyphicon glyphicon-trash TrashBinClr"></i></td>

                    </tr>
                </tbody>
            </table>

        </div>




    </div>


</div>

