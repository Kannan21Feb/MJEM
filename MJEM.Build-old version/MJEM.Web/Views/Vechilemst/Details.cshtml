
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<script src="~/Scripts/ng/Controller/VechileMst/VechileDetailsController.js"></script>
<script src="~/Scripts/ng/Services/VechileService/VechileService.js"></script>


<div class="row" ng-controller="Vechile.VechileDetailsController" ng-init="init();" ng-cloak>
    <div class="col-sm-12">

        <form class="form-horizontal" name="form" id="form" novalidate>

            <input type="hidden" value=@ViewBag.ActionType id="ActionType" name="ActionType" />
            <input type="hidden" value=@ViewBag.id id="ActionId" name="ActionId" />

            <div class="row">

                <div class="col-sm-6 ">
                    <div class="form-group">
                        <label class="col-sm-6 control-label">Vechile Type <span class="color-red"> *</span> </label>
                        <div class="col-sm-6">
                            <div>
                                <input type="hidden" id="VechileId" only-name ng-model="VechileId" class="form-control" autofocus required>
                                <select id="VechileTypeId" name="VechileTypeName"  class="form-control" 
                                        ng-model="VehcileType" ng-options="f.LovId as f.FieldValue for f in VechileTypeList"></select>

                            </div>
                        </div>
                    </div>
                </div>

                

                <div class="col-sm-6 ">
                    <div class="form-group">
                        <label class="col-sm-6 control-label">Vechile Number <span class="color-red"> *</span> </label>
                        <div class="col-sm-6">
                            <div >
                                <input type="text" id="Vechilename" only-name ng-model="VechileNumber" class="form-control" >
                            </div>
                        </div>
                    </div>
                </div>
            </div>



           

            <div class="row">
                <div class="col-sm-12 errmsg" style="color:red;" ng-show="errordisplay">
                    <ul class="errormsgcenter" ng-if="errorlist.length > 0">
                        <li ng-repeat="e in errorlist">
                            {{e}}
                        </li>
                    </ul>
                </div>

            </div>



            <div class="text-right">
                <button type="submit" id="save" class="btn btn-primary" ng-click="PerformAction()">Save</button>
                <button type="submit" id="Refresh" class="btn btn-warning" ng-click="clearfield()"> Refresh</button>
                <button type="submit" id="Back" class="btn btn-dark" onclick="window.location.href='/VechileMst/Index'">Back</button>

            </div>




        </form>


    </div>
</div>



    
    

